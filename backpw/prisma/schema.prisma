generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:1234@localhost:3306/pw"
}

model cancha {
  id           Int       @id @default(autoincrement())
  numero       Int
  estado       String
  localizacion String
  reserva      reserva[]
}

model reserva {
  id        Int      @id @default(autoincrement())
  fecha     DateTime @default(now())
  hora      String
  duracion  Int
  idUsuario Int
  idCancha  Int
  cancha    cancha   @relation(fields: [idCancha], references: [id], map: "Reserva_idCancha_fkey")
  usuario   usuario  @relation(fields: [idUsuario], references: [id], map: "Reserva_idUsuario_fkey")

  @@index([idCancha], map: "Reserva_idCancha_fkey")
  @@index([idUsuario], map: "Reserva_idUsuario_fkey")
}

model usuario {
  id            Int       @id @default(autoincrement())
  nombre        String
  pwd           String
  tipoDeUsuario String
  tipoDeCuenta  String
  reserva       reserva[]
}
